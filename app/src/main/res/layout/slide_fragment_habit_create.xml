<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable name="vm" type="pl.heng.viewmodel.NewHabitBaseViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellow_light">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/motivation"
                android:id="@+id/imageView5" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline4"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Podaj nazwę czynności:"
                style="@style/TextStyle"
                android:textColor="#000"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:id="@+id/appCompatTextView" app:layout_constraintVertical_bias="0.0"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline4"
                                                    android:orientation="horizontal"
                                                    app:layout_constraintGuide_percent="0.15"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:ems="10"
                android:textColor="@color/black"
                style="@style/TextStyle"
                android:id="@+id/editText2"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView"/>
        <TextView
                android:text="Podaj opis"
                style="@style/TextStyle"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/editText2" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                style="@style/TextStyle"
                android:shadowColor="@color/black"

                android:outlineAmbientShadowColor="@color/green_dark"
                android:ems="10"
                android:id="@+id/editText3" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView8" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="Wybierz tygodniowy cel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextStyle"
                android:textColor="#000"
                android:id="@+id/textView9" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/editText3" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
        />

        <com.mohammedalaa.seekbar.RangeSeekBarView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/range_seekbar"
                app:barHeight="@dimen/value_bar_barHeight"
                app:baseColor="@color/orange_light"
                app:circleRadius="@dimen/value_bar_circleRadius"
                app:circleTextColor="@color/black"
                app:circleTextSize="@dimen/value_bar_circleTextSize"
                app:fillColor="@color/orange"
                app:currentValue="2"
                app:minValue="1"
                app:maxValue="7"
                app:stepValue="1" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView9"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>


        <TextView
                android:text="Wprowadź datę końcową"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:id="@+id/textView4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/range_seekbar"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:text="@{String.valueOf(vm.dateEnd)}"
                android:onClick="@{(view) -> vm.onClickEndDate(view)}"
                style="@style/TextStyle"
                android:textColor="@color/black"
                android:hint="Kliknij by wybrać datę"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:id="@+id/editText4"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                style="@style/TextStyle"
                android:textColor="@color/black"
                android:text="@{String.valueOf(vm.notifyHour)}"
                android:onClick="@{(view) -> vm.onClickNotifyHour(view)}"
                android:hint="Kliknij by wybrać godzinę"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.475" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView10"/>

        <TextView
                android:text="Wybierz godzinę powiadomień"
                style="@style/TextStyle"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/editText4" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>