<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_new_task"
        android:background="@drawable/top_rounded_corner"
        tools:context=".fragment.AddTaskFragment">

    <ImageView
            android:src="@drawable/rounded_square"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>

    <EditText
            android:id="@+id/taskName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Nazwa nowego zadania"
            android:paddingTop="8dp"
            android:background="@null"
            android:paddingLeft="0dp"
            android:paddingBottom="8dp"
            android:textSize="24sp"
            android:textColorHint="@color/dark_gray"
            android:textColor="@color/black"
            android:fontFamily="@font/varelaround_regular"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/imageView2"/>

    <EditText
            android:layout_width="0dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Kategoria"
            android:textColorHint="@color/dark_gray"
            android:textColor="@color/black"
            android:background="@null"
            android:textSize="18sp"
            android:fontFamily="@font/varelaround_regular"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/editText5"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/taskName"/>
    <TextView
            android:text="Godzina powiadomień"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/varelaround_regular"
            android:textSize="18sp"
            android:id="@+id/textView11" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>

    <TextView
            android:text="Ilość dni w tyogdniu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/varelaround_regular"
            android:textSize="18sp"
            android:id="@+id/textCountInWeek" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btnNotifyTime" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:clickable="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:outlineProvider="background"
            android:background="@drawable/rounded_background"
            android:fontFamily="@font/varelaround_regular"
            android:text="19:30" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.485" android:id="@+id/btnNotifyTime"/>

    <com.mohammedalaa.seekbar.RangeSeekBarView
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:barHeight="@dimen/value_bar_barHeight"
            app:baseColor="@color/navy"
            app:circleRadius="@dimen/value_bar_circleRadius"
            app:circleTextColor="@color/white"
            app:circleTextSize="@dimen/value_bar_circleTextSize"
            app:fillColor="@color/red"
            app:currentValue="4"
            app:minValue="1"
            app:maxValue="7"
            app:stepValue="1"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textCountInWeek"
            android:id="@+id/rangeSeekBarView" android:layout_marginEnd="32dp"/>


    <Button
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Zapisz"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:outlineProvider="bounds"
            android:outlineSpotShadowColor="@color/dark_gray"
            android:outlineAmbientShadowColor="@color/dark_gray"
            android:fontFamily="@font/varelaround_regular"
            android:textSize="18sp"
            android:textColor="#191919"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@+id/rangeSeekBarView" android:layout_marginEnd="32dp"
            android:layout_marginTop="64dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintHorizontal_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>